<main class="container">
  <h1 class="my-4">Original Paintings <%= link_to "Add a New Painting", new_painting_path, class: "btn btn-primary" %></h1>

  <div class="row">
    <% @paintings.each do |painting| %>
      <div class="col-md-4 col-lg-3 mb-4">
        <div class="card h-100 d-flex flex-column">
          <%= link_to painting_path(painting) do %>
            <div class="image-container">
              <% if painting.image.attached? %>
                <%= image_tag painting.image, alt: painting.title, class: "card-img-top" %>
              <% else %>
                <%= image_tag "https://via.placeholder.com/150", alt: painting.title, class: "card-img-top" %>

              <% end %>
            </div>
          <% end %>
          <div class="card-body d-flex flex-column justify-content-start">
            <h4 class="card-title mb-auto"><%= painting.title %></h4>
            <h5 class="card-title"><%= "#{painting.artist.first_name} #{painting.artist.last_name}" if painting.artist %></h5>
            <p class="card-text"><%= painting.year %> </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</main>
